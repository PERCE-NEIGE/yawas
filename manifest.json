{
  "name": "Yawas",
  "author": "Laurent Denoue",
  "manifest_version": 2,
  "version": "7.1.9",
  "description": "Highlight Web and PDF files; stored online and recreated automatically when you revisit a page",
  "background": {"scripts": ["yawas-background.js"]},
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "exclude_matches": ["*://*.slack.com/*","*://web.whatsapp.com/*","*://www.google.com/bookmarks/*","*://accounts.google.com/*"],
      "js": ["yawas-content-script.js"],
      "all_frames": true
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://cdn.jsdelivr.net; object-src 'self'",
  "permissions": ["cookies","storage","contextMenus","activeTab","tabs", "http://*/*", "https://*/*","webRequest", "webRequestBlocking", "<all_urls>"],
  "browser_action": {
		"default_title": "Yawas",
  	"default_icon": "yawas_on_128.png",
    "default_popup": "options.html"
	},
	"icons": {
   "16": "icon16.png",
   "32": "icon32.png"
  },
  "commands": {
    "yawas-yellow": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "MacCtrl+Shift+Y"
      },
      "description": "Yawas Yellow"
    },
    "yawas-red": {
      "suggested_key": {
        "default": "Ctrl+Shift+R",
        "mac": "MacCtrl+Shift+R"
      },
      "description": "Yawas Red"
    },
    "yawas-blue": {
      "suggested_key": {
        "default": "Ctrl+Shift+B",
        "mac": "MacCtrl+Shift+B"
      },
      "description": "Yawas Blue"
    },
    "yawas-green": {
      "suggested_key": {
        "default": "Ctrl+Shift+G",
        "mac": "MacCtrl+Shift+G"
      },
      "description": "Yawas Green"
    }
  }
}
