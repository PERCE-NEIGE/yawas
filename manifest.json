{
  "name": "Yawas",
  "author": "Laurent Denoue",
  "manifest_version": 2,
  "version": "7.0.6",
  "description": "Highlight Web and PDF files; stored online and recreated automatically when you revisit a page",
  "background": {"scripts": ["yawas-background.js"]},
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "exclude_matches": ["*://www.google.com/bookmarks/*","*://accounts.google.com/*","*://mail.google.com/*","*://docs.google.com/*","*://drive.google.com/*"],
      "js": ["yawas-content-script.js"],
      "all_frames": true
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://cdn.jsdelivr.net; object-src 'self'",
  "permissions": ["storage","contextMenus","activeTab","tabs", "http://*/*", "https://*/*","webRequest", "webRequestBlocking", "<all_urls>"],
  "browser_action": {
		"default_title": "Yawas",
  	"default_icon": "yawas_on_128.png",
    "default_popup": "options.html"
	},
	"icons": {
   "16": "icon16.png",
   "32": "icon32.png"
  }
}
